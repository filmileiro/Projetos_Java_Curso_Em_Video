package desafio2_Java;

import java.util.Scanner;

public class desafio2 {

	public static void main(String[] args) {
		
        Scanner leitor = new Scanner(System.in); 
        int N = leitor.nextInt(); //lerá o teclado e  armaz. var N
        int[] X = new int[N];     // ??
        int menor = 0, posMenor = 0; // ??
        for (int i = 0; i < N; i++) {
        	X[i] = leitor.nextInt();
        	if (i == 0) {
        		menor = X[i];
        		posMenor = i;
        	} else if (X[i] < menor) {
        		menor = X[i];
        		posMenor = i;
        	}
        }
        System.out.println("Menor valor: " + ); //complete o codigo aqui de acordo com a variavel esperada
        System.out.println("Posicao: " + ); //complete o codigo aqui de acordo com a variavel esperada
        
        leitor.close();
        
        
	}

}
